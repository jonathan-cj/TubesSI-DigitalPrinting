<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id='editproduct'>&lt;!DOCTYPE html&gt;
        <xpath expr="//link[@rel='stylesheet']" position="after">
            <link rel="stylesheet" href="/tubes_si/static/src/css/addproduct.css"/>
        </xpath>
        <t t-call="website.layout">
            <t t-set="title">Edit Produk</t>

            <div class="">
                
                <h2 style='text-align: center; margin-top: 20px;'>Edit Produk</h2>
                <form id='caripesanan-form' class="addproduct-input" style="width: fit-content; height: fit-content; margin: 20px auto; padding: 20px 20px; border: 1px solid black; border-radius: 5px;" method='post' action=''>
                    <input class='addproduct-input' type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <label for='nama'>Nama produk: </label><br></br>
                    <input type='text' name='nama' style='width: 500px;' t-att-value="produk.nama"/><br></br><br></br>
                    <label for='harga'>Harga: </label><br></br>
                    <input type='text' name='harga' style='width: 500px;' t-att-value="produk.harga"></input><br></br><br></br>
                    <label for='deskripsi'>Deskripsi: </label><br></br>
                    <textarea rows="3" name='deskripsi' style='width: 500px;'><t t-esc="produk.deskripsi"/></textarea>
                    <br></br><br></br>
                    <input type='submit' value='Ganti' class='btn' style='margin-left: 400px; border: solid black 1px; border-radius: 5px;'/>
                    <t t-if='pesan'>
                        <p>
                            <t t-esc='pesan' />
                        </p>
                    </t>
                </form>
                
            </div>
        </t>
    </template>

</odoo>