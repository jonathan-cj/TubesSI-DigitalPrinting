<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pesan" name="halaman pesanan">&lt;!DOCTYPE html&gt;
        <html>
            <head>
                <title>Pesan</title>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
                <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <style>
                .shadow{ 
                    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
                }

                .nav-item a {
                    color: #EEEEEE;
                }

                .active {
                    background-color: #BC8CF2;
                    color: #000000 !important;
                }
                </style>
            </head>
            <body style="overflow-x: hidden;">
                <div class="row" style="padding: 0px 20px; background-color: #1F1D36;">
                <div class="col-6">
                    <h2 style="color: whitesmoke;">Digital Printing</h2>
                </div>
                <div class="col">
                    <ul class="nav justify-content-end h-100">
                    <li class="nav-item h-100">
                        <a class="nav-link h-100" aria-current="page" href="/">Produk</a>
                    </li>
                    <li class="nav-item h-100">
                        <a class="nav-link active h-100" href="#">Request</a>
                    </li>
                    </ul> 
                </div>
                </div>
                <div style="height: 30px;"></div>
                <div class="container mb-5">
                    <h2>Input Detail Pesanan</h2>
                </div>
                <div class="container border border-dark rounded py-4">
                    <div class="row justify-content-md-center">
                        <div class="col-4 pt-3">
                            <div class="card" style="width: 18rem;">
                                <img src="https://pngimage.net/wp-content/uploads/2018/06/placeholder-png-5.png" class="card-img-top" alt="..." />
                                <div class="card-body">
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                </div>
                            </div>
                        <!-- <img src="https://pngimage.net/wp-content/uploads/2018/06/placeholder-png-5.png" style="max-width: 100%; max-height: 50%; width: auto; height: auto;" /> -->
                        </div>
                        <div class="col-6">
                            <h2>Form pesanan</h2>
                            <form>
                                <div class="form-group">
                                    <label for="nama">Nama</label>
                                    <input type="text" class="form-control" id="nama" placeholder="masukkan nama..." />
                                </div>
                                <div class="form-group">
                                    <label for="alamat">Alamat</label>
                                    <textarea class="form-control" id="alamat" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="ukuran">Ukuran</label>
                                    <select class="form-control" id="ukuran">
                                        <option>A1</option>
                                        <option>A2</option>
                                        <option>A3</option>
                                        <option>A4</option>
                                        <option>A5</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="choose-file">File</label>
                                    <input type="file" class="form-control-file" id="choose-file" />
                                </div>
                                <div class="form-group">
                                    <label for="catatan">Catatan</label>
                                    <textarea class="form-control" id="catatan" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="bukti">Bukti pembayaran</label>
                                    <input type="file" class="form-control-file" id="bukti" />
                                </div>
                                <button type="button pl-auto" class="btn btn-primary">Pesan</button>
                            </form>
                        </div>
                    </div>
                </div>
            </body>
        </html>
    </template>
</odoo>